{{> ../partials/site_start}}
  <p>
    {{products_intro}} <a href="about_us_{{lang}}.html">{{learn_more}}</a>
  </p>
  <div class="flex-row">
    <div class="card">
      <h1>{{products_veggie_box}}</h1>
      <div class="flex-row">
        <div class="flex-column">
          <div class="flex-grow">
            <img src="../../img/veggie_box.png" alt="">
          </div>
          <a href="https://store.buckybox.com/biohofhausmann"
            class="link order-online"
            target="_blank">
            {{menu_order_online}}
          </a>
        </div>
        <div>
          <h2>{{products_box_delivery}}</h2>
          <div class="flex-row price-list">
            <div>
              <img src="../../img/box_brow.png" height="60" alt="XL">
